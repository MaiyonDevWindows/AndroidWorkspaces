<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <EditText
        android:id="@+id/editTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề bài hát"
        android:inputType="text" />
    <EditText
        android:id="@+id/editAuthorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tác giả"
        android:inputType="text"
        android:layout_below="@id/editTitleEditText"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/editDurationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời lượng"
        android:inputType="text"
        android:layout_below="@id/editAuthorEditText"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/saveEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu thay đổi"
        android:layout_below="@id/editDurationEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>